{
  "name": "babelsheet-node",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.js",
  "scripts": {
    "test": "jest",
    "test-watch": "jest --watch",
    "start-dev": "pm2-dev src/api/index.ts",
    "start-producer-dev": "pm2-dev src/producer/index.ts",
    "format": "prettier --write 'src/**/*.ts'",
    "postinstall": "pm2 install typescript",
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "lint": "tslint -c tslint.json 'src/**/*.ts' -e 'src/**/*.spec.ts'",
    "lint-fix": "tslint -c tslint.json 'src/**/*.ts' -e 'src/**/*.spec.ts' --fix",
    "serverless-deploy": "serverless deploy -v",
    "serverless-remove": "serverless remove"
  },
  "author": "The Software House",
  "license": "MIT",
  "dependencies": {
    "awilix": "^3.0.6",
    "aws-sdk": "^2.217.1",
    "celebrate": "^7.0.4",
    "cors": "^2.8.4",
    "dot-prop-immutable": "^1.4.0",
    "dotenv": "^5.0.1",
    "express": "^4.17.3",
    "google-auth-library": "^1.3.2",
    "googleapis": "^27.0.0",
    "helmet": "^3.12.0",
    "json-mask": "^0.3.8",
    "morgan": "^1.9.0",
    "node-schedule": "^1.3.0",
    "opn": "^5.3.0",
    "ramda": "^0.25.0",
    "redis": "^2.8.0",
    "server-destroy": "^1.0.1",
    "serverless": "^1.26.1",
    "serverless-http": "^1.5.5",
    "serverless-plugin-typescript": "^1.1.5",
    "winston": "^2.4.1"
  },
  "devDependencies": {
    "@types/aws-sdk": "^2.7.0",
    "@types/cors": "^2.8.3",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.11.1",
    "@types/glob": "^5.0.35",
    "@types/helmet": "0.0.37",
    "@types/jest": "^22.2.0",
    "@types/joi": "^13.0.7",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.4.7",
    "@types/node-schedule": "^1.2.2",
    "@types/opn": "^5.1.0",
    "@types/ramda": "^0.25.21",
    "@types/redis": "^2.8.6",
    "@types/server-destroy": "^1.0.0",
    "@types/supertest": "^2.0.4",
    "@types/winston": "^2.3.8",
    "husky": "^0.15.0-rc.8",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.0",
    "pm2": "^2.10.1",
    "prettier": "^1.11.1",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.2",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "typescript": "^2.7.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
